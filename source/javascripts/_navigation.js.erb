var current, images;

$(document).ready(function() {
  images = <%= Dir.glob("gifs/**") %>;
  current = 0;

  set_image();

  $('a.next').click(function (e) {
    next_image();
    e.preventDefault();
  });

  $('a.prev').click(function (e) {
    prev_image();
    e.preventDefault();
  });
});

$(document).keydown(function(e){
    if (e.keyCode == 37) {
      prev_image();
      return false;
    } else if(e.keyCode == 39) {
      next_image();
      return false;
    }
});

/*--------------
    Functions
---------------*/

function set_image() {
  $('img.display').attr('src', images[current]);
}

function next_image() {
  current++;
  if (current > images.length) {
    current = 0;
  }

  set_image();
}

function prev_image() {
  current--;
  if (current < 0) {
    current = images.length;
  }

  set_image();
}
